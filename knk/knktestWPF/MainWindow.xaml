<Window x:Class="knktestWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:knktestWPF"
        mc:Ignorable="d"
        Title="MainWindow" MaxHeight="580" MaxWidth="600">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" MaxHeight="{Binding Height}"  MaxWidth="{Binding Width}" Margin="0,0,0,0" VerticalAlignment="Top" Source="{Binding IMAGE}"/>
        <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="10,480,0,0" VerticalAlignment="Top" Width="75" Click="button1_click"/>
        <Button x:Name="button2" Content="Button" HorizontalAlignment="Left" Margin="95,480,0,0" VerticalAlignment="Top" Width="75" Click="button2_click"/>
        <Button x:Name="button3" Content="Button" HorizontalAlignment="Left" Margin="180,480,0,0" VerticalAlignment="Top" Width="75" Click="button3_Click"/>
    </Grid>
</Window>

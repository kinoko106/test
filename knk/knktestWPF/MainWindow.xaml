<Window x:Class="knktestWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:knktestWPF"
        mc:Ignorable="d"
        Title="MainWindow" MaxHeight="580" MaxWidth="600" Width="{Binding MainWidth}" Height="{Binding MainHeight}">
    <Window.Resources>

    </Window.Resources>
    <Grid x:Name="MainGrid">
        <!-- stackpanelにぶち込む -->
        <Button x:Name="button1"
                Content="Button"
                HorizontalAlignment="Left"
                Margin="10,10,0,0"
                VerticalAlignment="Top"
                Width="75" Click="button1_click"/>

        <TextBlock x:Name="title"
                   HorizontalAlignment="Left"
                   Margin="391,12,0,0" 
                   TextWrapping="Wrap" 
                   Text="TextBlock"
                   VerticalAlignment="Top"/>
        <ListBox x:Name="ProcessList" 
                 HorizontalAlignment="Left" 
                 Height="100" 
                 Margin="95,0,0,0" 
                 VerticalAlignment="Top"
                 Width="100"
                 SelectionChanged="ProcessList_changed"/>

    </Grid>
</Window>

<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="WpfApplication1.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid>
        <Label x:Name="label" Content="{Binding FileName}" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Height="39" Width="300" />
        <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
            <Image x:Name="image" MinHeight="400" MinWidth="400" Height="{Binding Height}" Width="{Binding Width}" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"  Source="{Binding Image}"/>
            <Image x:Name="edge" MinHeight="400" MinWidth="400" Height="{Binding Height}" Width="{Binding Width}" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"  Source="{Binding Edge}"/>
        </StackPanel>
        <Grid VerticalAlignment="Bottom" MinHeight="60" >
           <Grid VerticalAlignment="Top">
               <Button x:Name="Load" Content="Load Image" Click="OnClick_load" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top" Width="75"/>
               <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="90,5,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" SelectionChanged="comboBox_changed">
                   <ComboBoxItem Content="Canny"/>
                   <ComboBoxItem Content="FAST"/>
                   <ComboBoxItem Content="CDFAST"/>
               </ComboBox>
               <Button x:Name="button1" Click="Submited" Content="Submit" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,3,5,0"/>
           </Grid>
           <Grid VerticalAlignment="Bottom" MinHeight="30" IsEnabled="False">
                <Label x:Name="threshold1" Content="threshold1" VerticalAlignment="Top" HorizontalAlignment="Left" />
            </Grid>
        </Grid>
    </Grid>
</Window>